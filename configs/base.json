{
  "compilerOptions": {
    "outDir": "./../dist/types",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "baseUrl": "."
  },
  "include": [
    "./../src/**/*",
    "./images.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "**/*.test.dom.tsx",
    "**/*.test.snap.tsx",
    "**/*.test.unit.tsx"
  ]
}